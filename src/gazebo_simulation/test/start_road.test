<!-- KITcar launch script for pre_cropping -->
<launch>
  <arg name="start_activated" default="true" />
  <arg name="pkg" default="gazebo_simulation"/>

  <arg name="car_name" default="dr_drift" />
  <arg name="road" default="curves"/>

  <arg name="tolerance" default="0.5"/>

  <include file="$(find gazebo_simulation)/launch/master.launch">
    <arg name="car_name" value="$(arg car_name)"/>
    <arg name="road" value="$(arg road)"/>
    <arg name="gui" value="false"/>
    <arg name="gz_recording" value="false"/>
    <arg name="gz_debug" value="false"/>
    <arg name="rviz" value="false" />
  </include>

  <test test-name="start_simulation_test" pkg="$(arg pkg)" time-limit="20" type="start_test"/>

</launch>
