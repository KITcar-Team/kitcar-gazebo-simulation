<!-- Just for highlighting -->

<launch>
  <arg name="link_pose" default="true"/>
  <arg name="link_twist" default="true"/>

  <arg name="car_name" default="dr_drift" />
 
  <arg name="name" default="default-road"/>
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="extra_gazebo_args" default=""/>
  <arg name="gui" default="true"/>
  <arg name="recording" default="false"/>
  <arg name="debug" default="false"/>
  <arg name="physics" default="ode"/>
  <arg name="verbose" default="false"/>
  <arg name="respawn_gazebo" default="false"/>
  <arg name="use_clock_frequency" default="false"/>
  <arg name="pub_clock_frequency" default="100"/>
  <arg name="rviz" default="false"/>
	<arg name="include_brain" default="true"/>

	
	<!-- Launch nodes to connect gazebo and kitcar brain -->
  <include file="$(find gazebo_simulation)/launch/simulation_brain_link.launch">
    <arg name="car_name" value="$(arg car_name)"/>
    <arg name="link_pose" value="$(arg link_pose)"/>
    <arg name="link_twist" value="$(arg link_twist)"/>
	</include>

	<!-- Launch KITcar_brain -->
  <include file="$(find gazebo_simulation)/launch/brain.launch">
    <arg name="car_name" value="$(arg car_name)"/>
  </include>

  <!-- Start the vehicle simulation -->
  <include file="$(find control_debug)/launch/vehicle_simulation_node.launch">
    <arg name="car_name" value="$(arg car_name)"/>
  </include>

	<include file="$(find gazebo_simulation)/launch/world.launch">
    <arg name="world_name" value="$(arg name)"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="recording" value="$(arg recording)"/>
    <arg name="debug" value="$(arg debug)"/>
    <arg name="physics" default="$(arg physics)"/>
    <arg name="verbose" default="$(arg verbose)"/>
    <arg name="respawn_gazebo" default="$(arg respawn_gazebo)"/>
    <arg name="use_clock_frequency" default="$(arg use_clock_frequency)"/>
    <arg name="pub_clock_frequency" default="$(arg pub_clock_frequency)"/>
  </include>

  <!-- Visualisation -->

  <group if="$(arg gui)">  
		<node pkg="rqt_mission_mode" type="rqt_mission_mode" name="rqt_mission_mode" output="screen"/>
	</group>


  <group if="$(arg rviz)">
    <include file="$(find visualization)/launch/visualization.launch" />
    <node pkg="rviz" type="rviz" name="rviz" output="screen" args="-f simulation -d  $(find navigation_debug)/../../res/rviz/navigation_validation_w_camera.rviz -s $(find navigation_debug)/../../res/rviz/kitcar_logo.png"/>
  </group>

</launch>
